<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="CallSecondActivity"
        android:text="@string/db" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="550dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/button1" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="270dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="305dp"
            android:text="TextView" />

    </FrameLayout>

    <TableLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="350dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keag" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="350dp"
            android:layout_height="200dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@android:drawable/screen_background_light" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="107dp"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="350dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="@string/eg" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="350dp"
            android:layout_height="200dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@android:drawable/screen_background_light" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="350dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:text="@string/aeg" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="350dp"
            android:layout_height="200dp" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="119dp"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@android:drawable/screen_background_light" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/frame"
        android:layout_marginRight="17dp"
        android:text="Sıfırla" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frame"
        android:layout_marginRight="42dp"
        android:layout_toLeftOf="@+id/button4"
        android:text="Durdur" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frame"
        android:layout_marginRight="55dp"
        android:layout_toLeftOf="@+id/button3"
        android:text="Başlat" />

</RelativeLayout>